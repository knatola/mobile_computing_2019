<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:id="@+id/day_activity_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/day_activity_emoji"
        android:layout_weight="2"
        android:src="@drawable/happy"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/day_activity_date"
        android:layout_weight="3"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/day_activity_first"
        android:layout_weight="2"
        android:layout_margin="16dp"
        android:src="@drawable/activity_cycling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="..."
        android:textColor="@color/white"
        android:layout_weight="1"
        android:textSize="28sp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <View
        android:id="@+id/view_3"
        android:background="@color/cyan"
        android:layout_below="@id/day_activity_linear"
        android:layout_marginTop="8dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_width="match_parent" />

</RelativeLayout>