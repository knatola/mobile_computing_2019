<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    android:outlineProvider="background"
    android:elevation="@dimen/elevation_card_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rectangle">

    <TextView
        android:id="@+id/reminder_header"
        android:layout_margin="@dimen/large_margin"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="reminder header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/reminder_icon"
        android:layout_below="@id/reminder_header"
        android:layout_margin="@dimen/large_margin"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sitting"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/reminder_text"
        android:layout_below="@id/reminder_icon"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/general_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reminder_date"
        android:layout_below="@id/reminder_text"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/general_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/reminder_delete"
        android:text="@string/delete"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:theme="@style/AppTheme"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:layout_below="@id/reminder_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>