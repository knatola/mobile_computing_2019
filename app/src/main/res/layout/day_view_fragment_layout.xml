<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/emoticon_wrapper"
        android:layout_below="@+id/today_btn_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_1"
        android:background="@color/cyan"
        android:layout_marginTop="16dp"
        android:layout_below="@id/emoticon_wrapper"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        />
    <!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_recycler"
        android:layout_margin="4dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/view_1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        -->

    <com.example.whatisup.src.ui.view.HorizontalGraphView
        android:id="@+id/activity_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/view_1"/>

    <EditText
        android:id="@+id/today_mood_input"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/bottom_selector_margin"
        android:inputType="textMultiLine"
        android:lines="8"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryTransparent"
        android:minLines="8"
        android:gravity="start"
        android:maxLines="8"
        android:hint="@string/today_mood"
        android:layout_below="@id/view_2"
        android:scrollbars="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <View
        android:id="@+id/view_2"
        android:background="@color/cyan"
        android:layout_marginTop="16dp"
        android:layout_below="@id/activity_graph"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        />

    <ImageButton
        android:id="@+id/today_btn_image"
        android:background="@color/colorPrimaryTransparent"
        android:src="@drawable/ic_camera_alt_black_24dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</RelativeLayout>

</ScrollView>