<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/activity_info_header"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text"
        android:layout_marginStart="@dimen/medium_margin"
        android:text="@string/day_activity_amount"
        android:paddingTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_amount"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text"
        android:layout_toEndOf="@id/activity_info_header"
        android:paddingTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/edit_targets"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:drawableTint="@color/colorPrimary"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text"
        android:text="@string/day_edit_targets"
        android:drawableStart="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/select_targets"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:text="@string/day_select_targets"
        android:textSize="@dimen/medium_text"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.whatisup.src.ui.view.HorizontalGraphView
        android:id="@+id/activity_graph"
        android:layout_below="@id/select_targets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin" />

    <TextView
        android:layout_below="@id/activity_graph"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/black"
        android:text="@string/day_activity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
