<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_relative"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_icon"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/activity_name"
        android:text="@string/day_activity_name"
        android:textAlignment="center"
        android:layout_below="@id/activity_icon"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:layout_width="68dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_duration"
        android:text="@string/day_activity_duration"
        android:textAlignment="center"
        android:layout_below="@id/activity_name"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>